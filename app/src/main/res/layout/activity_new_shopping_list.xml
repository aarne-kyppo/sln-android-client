<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="aarne.kyppo.shoplistnotifier.app.NewShoppingListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start"
        android:id="@+id/label_start_time"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical|fill" />

    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_picker"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End"
        android:id="@+id/label_end_time"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textView2"
        android:layout_row="2"
        android:layout_column="0" />

    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_picker"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add shoppinglist"
        android:id="@+id/button"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="left"
        android:onClick="addShoppingList" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newtitle"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal" />
</GridLayout>
